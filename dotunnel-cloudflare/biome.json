{
  "$schema": "../node_modules/@biomejs/biome/configuration_schema.json",
  "root": false,
  "extends": "//",
  "files": {
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.css",
      "**/*.json",
      "**/*.jsonc",
      "!worker-configuration.d.ts"
    ]
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noUnknownAtRules": {
          "level": "warn",
          "options": {
            "ignore": ["theme", "plugin", "custom-variant", "apply"]
          }
        }
      }
    }
  }
}
